{{< base }}

	{{$ content }}

		{{# user }}
			<div id="user" class="col-xs-12 author list-posts">

				<div class="row img-header">
					{{# getHeader }}
						<img alt="{{getDisplayName}}" src="{{getHeader}}">
					{{/ getHeader }}
					{{^ getHeader }}
						<img class="sin-thumbnail">
					{{/ getHeader }}
				</div>

				<div class="profile row col-xs-12">

					<span class="avatar col-xs-12 col-md-4 col-lg-3">
						<img src="{{getAvatarProfile}}" title="{{getDisplayName}} avatar">
					</span>

					<span class="info icol-xs-12 col-md-8 col-lg-9">
						{{> author/_profile_tab }}
					</span>

				</div>

				<h2 class="col-xs-12">{{#transu}}posts{{/transu}}</h2>

				<div class="posts">
					{{# getPosts }}
						{{> home/_post }}
					{{/ getPosts }}
				</div>

				{{> home/_show_more_btn }}
			</div>
		{{/ user }}

	{{/ content }}

{{/ base }}