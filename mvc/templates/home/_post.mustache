<div class="row">
	<div class="col-xs-12 post">

		{{# postWith.thumbnail }}
			{{> home/postWith/_thumbnail }}
		{{/ postWith.thumbnail }}

		<div class="col-xs-12 {{# getThumbnail }} col-sm-10 {{/ getThumbnail }}">

			{{# postWith.date }}
				{{> home/postWith/_date }}				
			{{/ postWith.date }}

			<span class="col-xs-12 title">
				<a class="permalink" href="{{getPermalink}}">{{getTitle}}</a>

				{{# postWith.author }}
					{{> home/postWith/_author }}
				{{/ postWith.author }}

				{{# postWith.commentsNumber }}
					{{> home/postWith/_comments_number }}					
				{{/ postWith.commentsNumber }}

				{{# currentUser.canEditor }}
				<span class="edit-control">
					<a class="btn btn-default" href="{{{getEditLink}}}">{{#transu}}edit{{/transu}}</a>
				</span>
				{{/ currentUser.canEditor }}

			</span>

			{{# postWith.excerpt }}
				{{> home/postWith/_excerpt }}
			{{/ postWith.excerpt }}

		</div>

	</div>	
</div>
