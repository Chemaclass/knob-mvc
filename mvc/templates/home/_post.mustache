<div class="col-xs-12 post">

	{{# getThumbnail }}
		<div class="col-xs-12 col-sm-2 thumbnail">
			<a href="{{getPermalink}}"><img src="{{getThumbnail}}"></a>
		</div>
	{{/ getThumbnail }}

	<div class="col-xs-12 {{# getThumbnail }} col-sm-10 {{/ getThumbnail }}">

		
		<span class="col-xs-12 date">
			<span class="date">{{getDate | date.string}}</span> {{#trans}}post.by{{/trans}} 
			<a class="author-url" href="{{getAuthor.getPostsUrl}}">{{getAuthor.getDisplayName}}</a>
		</span>


		<span class="col-xs-12 title">
			<a class="permalink" href="{{getPermalink}}">{{getTitle}}</a>

			{{# getComments | count}}
				<span class="total-comments" title="{{#transu}}comments{{/transu}}">
					{{# getComments | moreThan1}}
							<i class="fa fa-comments-o"></i>
					{{/ getComments | moreThan1}}	
					{{^ getComments | moreThan1}}
							<i class="fa fa-comment-o"></i> 
					{{/ getComments | moreThan1}}
					<span class="total">{{getComments | count}}</span>
				</span>	
			{{/ getComments | count}}

			{{> post/_edit_control }}

		</span>

		<span class="col-xs-12 excerpt">
			{{{ getExcerpt }}} <a class="see-more" href="{{getPermalink}}">{{#transu}}see_more{{/transu}}</a>
		</span>

	</div>

</div>