	<div class="title ">{{#transu}}searcher{{/transu}}</div>

	<form action="/" method="get" class="" role="search">

		<div class="input-group">

			<input type="text" name="s" class="form-control"  placeholder="{{#transu}}search{{/transu}}">

			{{# searcher.withButton }}
